$form-padding = 0.4em 0.2em 0.2em 0.2em;
$form-line-height = 1.5em;
$form-margin-top = 0.5em;

form {
    overflow: hidden;
}

label {
    margin-top: $form-margin-top;
    padding: $form-padding;
    padding-left: 0;
    padding-right: 0;
    line-height: $form-line-height;

    &:after {
        content: "";
        padding-right: 5px;
    }

    &.cb {
        padding-top: 0.1em;
    }
}



input,
textarea {
    border-radius: 5px;
    border: 1px solid $light-gray;
    box-shadow: inset 0 2px 2px 0 rgba(177, 177, 177, 0.30);
    margin-top: $form-margin-top;
    padding: $form-padding;

    &[type="checkbox"] {
        display: inline-block;

        &:focus,
        &.focused {
            box-shadow: none;
        }

    }

    &:focus,
    &.focused {
        border: 1px solid $light-blue;
        box-shadow: 0 0px 5px 0 $light-blue;
    }

    &:invalid, &.error {
        border: 1px solid $blood-red;
        box-shadow: 0px 0px 5px 0 $blood-red;
    }
}



.help {
    color: $battleship-gray;
    font-size: 11px;
    margin-top: 0.25em;
}


.flex-container {
    display: flex;

    .col {
        width: 50%;
    }

    .flex {
        display: flex;
        margin: 5px;

        label {
            text-align: right;

            .cb {
                //margin-top: 0.25;
                flex: 1;
            }
        }

        input {
            flex: 1;
        }

        input[type="checkbox"] {
            margin-right: 5px;
        }

    }
}

